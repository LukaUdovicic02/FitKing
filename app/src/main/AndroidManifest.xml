<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fitking">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleLoginScreen"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />
        <activity
            android:name=".Firebase.ForgotPassword"
            android:exported="true" />

        <activity
            android:name=".Firebase.RegisterUserActivity"
            android:exported="true" />

        <activity
            android:name=".ui.AddEditNoteActivity"
            android:exported="true"
            android:parentActivityName=".ui.MainActivity" />

        <activity
            android:name=".ui.AddEditWorkoutActivity"
            android:exported="true"
            android:parentActivityName=".ui.MainActivity" />

        <activity
            android:name=".Firebase.LoginActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>